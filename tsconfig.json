{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "dist",
		
		/* Paths */
		"baseUrl": "./src",
		"paths": {
		  "@config/*": ["./config/*"],
		  "@controllers/*": ["./controllers/*"],
		  "@middlewares/*": ["./middlewares/*"],
		  "@models/*": ["./models/*"],
		  "@routes/*": ["./routes/*"],
		  "@utils/*": ["./utils/*"],
		  "@views/*": ["./views/*"],
		  "@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
}